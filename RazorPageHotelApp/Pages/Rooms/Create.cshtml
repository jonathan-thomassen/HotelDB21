@page
@model RazorPageHotelApp.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Room.RoomNo" class="control-label"></label>
        <input asp-for="@Model.Room.RoomNo" class="form-control" value="" />
        <span asp-validation-for="Room.RoomNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Types" class="control-label"></label>
        <select asp-for="@Model.Room.Types">
            <option value="S">Single</option>
            <option value="D">Double</option>
            <option value="F">Family</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Price" class="control-label"></label>
        <input asp-for="@Model.Room.Price" class="form-control" value="" />
        <span asp-validation-for="Room.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" asp-route-id="@Model.Hotel.HotelNo" value="Add" />
    </div>
</form>