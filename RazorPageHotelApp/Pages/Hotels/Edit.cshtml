@page
@model RazorPageHotelApp.Pages.Hotels.EditModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Hotel.HotelNo" class="control-label"></label>
        <p>@Model.Hotel.HotelNo</p>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Name" class="control-label"></label>
        <input asp-for="@Model.Hotel.Name" class="form-control" />
        <span asp-validation-for="Hotel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Address" class="control-label"></label>
        <input asp-for="@Model.Hotel.Address" class="form-control" />
        <span asp-validation-for="Hotel.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="OK"/>
    </div>
</form>